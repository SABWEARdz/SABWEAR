// Ø­Ø°Ù Ù…Ù†ØªØ¬ Ù…Ù† Ø§Ù„ØªØ®Ø²ÙŠÙ† Ø§Ù„Ù…Ø­Ù„ÙŠ
const deleteProductFromLocalStorage = (productId) => {
  try {
    const saved = localStorage.getItem('sabwear_products');
    if (saved) {
      const products = JSON.parse(saved);
      const updatedProducts = products.filter(p => p.id !== productId);
      localStorage.setItem('sabwear_products', JSON.stringify(updatedProducts));
      return true;
    }
  } catch (error) {
    console.error('Ø®Ø·Ø£ ÙÙŠ Ø­Ø°Ù Ø§Ù„Ù…Ù†ØªØ¬ Ù…Ø­Ù„ÙŠØ§Ù‹:', error);
  }
  return false;
};

